generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Item {
  itemCode      Int            @id
  itemName      String
  atk           Int
  hth           Int
  price         Int
  inventory     Inventory[]
  equippedItems EquippedItem[]
}

model Character {
  characterId   String         @id
  health        Int            @default(500)
  power         Int            @default(100)
  money         Int            @default(10000)
  account       Account        @relation(fields: [accountId], references: [accountId])
  accountId     String
  inventory     Inventory[]
  equippedItems EquippedItem[]
}

model Account {
  accountId       String       @id
  accountPassword String
  name            String
  characters      Character[] 
}

model Inventory {
  inventoryId Int    @id @default(autoincrement())
  character   Character @relation(fields: [characterId], references: [characterId])
  characterId String
  item        Item @relation(fields: [itemCode], references: [itemCode])
  itemCode    Int
  count       Int  
}

model EquippedItem {
  equippedItemId Int    @id @default(autoincrement())
  character      Character @relation(fields: [characterId], references: [characterId])
  characterId    String
  item           Item @relation(fields: [itemCode], references: [itemCode])
  itemCode       Int
}


